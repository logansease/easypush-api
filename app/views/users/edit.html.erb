<h1>Edit user</h1>

<% if @user == current_user %>
    <p>Subscription is: <strong>
      <%= if @user.is_subscription_active then "Active" else "Inactive. Please subscribe." end %>
    </strong></p>
    <%= link_to "Manage Subscription", "/subscriptions/manage", :class => 'button' %>
<% end %>

<%= form_for(@user) do |f| %>

<!-- the argument :f below is to pass the f into the partial -->
<%= render 'fields', :f => f%>

<div class="actions">
  <%= f.submit "Update"%>
</div>

<% end %> 

<div id="link_form">
	<%= render 'fb_link_form'%>
</div>

<%=  render "shared/fb" %>